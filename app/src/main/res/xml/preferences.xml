<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lookintothesky="http://schemas.android.com/apk/res/com.lunarbase24.lookintothesky">

    <PreferenceCategory
        android:key="widget_settings"
        android:title="@string/configure"
        >
        <ListPreference
            android:key="disphour_preference"
            android:title="@string/disphour"
            android:summary="@string/settings_summary_disphour"
            android:dialogTitle="@string/disphour"
            android:entries="@array/disphour"
            android:entryValues="@array/disphour_value"
            android:defaultValue="12"
            />
        <ListPreference
            android:key="updatetime"
            android:title="@string/updatetime"
            android:summary="@string/settings_summary_updatetime"
            android:dialogTitle="@string/updatetime"
            android:entries="@array/updatetime"
            android:entryValues="@array/updatetime_value"
            android:defaultValue="15"
            />
        <com.lunarbase24.lookintothesky.SeekBarPreference
            android:key="seekbar_transparency"
            android:title="@string/graph_back"
            android:summary="@string/settings_summary_transparency"
            android:persistent="true"
            android:defaultValue="125"
            lookintothesky:minValue="0"
            lookintothesky:maxValue="255"
            />
        <com.lunarbase24.lookintothesky.SeekBarPreference
            android:key="seekbar_dotradius"
            android:title="@string/graph_radius"
            android:summary="@string/settings_summary_dotradius"
            android:persistent="true"
            android:defaultValue="8"
            lookintothesky:minValue="3"
            lookintothesky:maxValue="15"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="notify_settings"
        android:title="@string/configure_notify"
        >
        <CheckBoxPreference
            android:key="notify"
            android:title="@string/notify"
            android:summary="@string/settings_summary_notify"
            android:defaultValue="false"
            />
        <com.lunarbase24.lookintothesky.ColorListPreference
            android:key="colorlist_notify"
            android:title="@string/notify_value"
            android:summary="@string/settings_summary_notifyvalue"
            android:dialogTitle="@string/notify_value"
            android:entries="@array/notify"
            android:entryValues="@array/notify_value"
            android:widgetLayout="@layout/color_sample"/>
    </PreferenceCategory>
</PreferenceScreen>